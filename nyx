#!/usr/bin/ruby

# encoding: UTF-8

require_relative "Libs/loader.rb"

# ----------------------------------------------------------------------------

if ARGV[0] == "search" then
    Space::generalSearchLoop()
    exit
end

if ARGV[0] == "listing" then
    loop {
        filepath = LucilleCore::selectEntityFromListOfEntitiesOrNull("Asteroid", Space::ids(), lambda{|id| Space::description(id) })
        break if filepath.nil?
        Space::landing(id)
    }
    exit
end

if ARGV[0] == "make" then
    filepath = Space::interactivelyMakeNewAsteroidOrNull()
    exit if filepath.nil?
    Space::landing(id)
    exit
end

if ARGV[0] == "unique-string" then
    puts SecureRandom.hex(6)
    exit
end

if ARGV[0] == "fsck" then
    Space::ids().each{|id|
        puts "fsck: #{id}"
        Space::fsck(id)
    }
    puts "All good!".green
    exit
end

str = <<HELP
usage:
    nyx search
    nyx listing
    nyx make
    nyx unique-string # Generates a unique string for type FSUniqueString
    nyx fsck
    nyx help # help display
HELP
puts str

