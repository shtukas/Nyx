#!/usr/bin/ruby

# encoding: UTF-8

require_relative "Libs/loader.rb"

# ----------------------------------------------------------------------------

Thread.new {
    sleep 10
    NxSmartDirectory::smartDirectoriesImportScan(false)
    NxFSPermaPoint::dataMaintenance()
}

def mainLoop()
    loop {
        operations = ["search", "insert new entity", "timelime", "scan fs", "unique-string", "fsck"]
        operation = LucilleCore::selectEntityFromListOfEntitiesOrNull("operation", operations)
        return if operation.nil?
        if operation == "search" then
            Search::searchLoop()
        end
        if operation == "insert new entity" then
            entity = NxEntity::interactivelyCreateNewEntityOrNull()
            exit if entity.nil?
            NxEntity::landing(entity)
        end
        if operation == "timelime" then
            point = NxTimelinePoint::selectOnePointOrNull()
            exit if point.nil?
            NxTimelinePoint::landing(point)
        end
        if operation == "scan fs" then
            NxSmartDirectory::smartDirectoriesImportScan(true)
        end
        if operation == "unique-string" then
            puts SecureRandom.hex(6)
            LucilleCore::pressEnterToContinue()
        end
        if operation == "fsck" then
            Fsck::fsckEntities()
        end
    }
end

Search::searchLoop()
mainLoop()
