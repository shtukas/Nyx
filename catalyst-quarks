#!/usr/bin/ruby

# encoding: UTF-8

require_relative "Libs/loader.rb"

# ----------------------------------------------------------------------------

QuarksOrdinals::firstNQuarksInOrdinalOrder(CatalystUtils::screenHeight()-2)
    .map{|quark|
        announce = "(ord: #{"%7.3f" % QuarksOrdinals::getQuarkOrdinalOrZero(quark)}, rt: #{"%5.3f" % BankExtended::recoveredDailyTimeInHours(quark["uuid"]).round(3)}) #{Patricia::toString(quark)}"
        if DoNotShowUntil::isVisible(quark["uuid"]) then
            puts announce[0, CatalystUtils::screenWidth()-2]
        else
            puts announce[0, CatalystUtils::screenWidth()-5].yellow
        end
    }
